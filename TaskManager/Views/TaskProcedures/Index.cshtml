@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Task Procedures</h2>
<hr />

<table id="taskProcedures" class="table table-hover">
    <thead>
        <tr>
            <th>    </th>
            <th>Task</th>
            <th>SubTask</th>
            <th>Procedure Name</th>
            <th>Video</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#taskProcedures").DataTable({
                ajax: {
                    url: "/api/taskprocedures",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: "TaskProcedureId",
                        render: function (data, type, taskproc) {
                            return "<a class='btn btn-primary btn-xs' href='/taskprocedures/edit/" + data + "'>View</a>";
                        }
                    },
                    {
                        data: "Tasks.TaskName",
                        visible: false
                    },
                    {
                        data: "SubTasksLevel1.SubTaskName"
                    },
                    {
                        data: "TaskSteps"
                    },
                    {
                        data: "TaskVideoFile"
                    }
                ],

                drawCallback: function (settings) {
                    var api = this.api();
                    var rows = api.rows({ page: 'current' }).nodes();
                    var last = null;

                    api.column(1, { page: 'current' }).data().each(function (group, i) {
                        if (last !== group) {
                            $(rows).eq(i).before(
                                '<tr style="background-color: #ddd"><td colspan="4">' + group + '&nbsp; &nbsp; &nbsp; &nbsp; <a class="btn btn-primary btn-xs">Add Step</a></td></tr>'
                            );

                            last = group;
                        }
                    });
                }
            });
        });
    </script>
}


