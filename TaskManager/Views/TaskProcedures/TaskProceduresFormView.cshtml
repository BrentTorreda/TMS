@model TaskManager.ViewModels.TaskProcedureViewModel

@{
    ViewBag.Title = "TaskProcedures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Task Procedures</h2>
<h4>@Model.TaskProcedureDescription</h4>
<hr />
<br />

<div class="container">
<label class="col-sm-2">Step</label>
<div class="col-sm-10">
    <h5>@Model.TaskProcedureOrder</h5>
</div>

<label class="col-sm-2">Description</label>
<div class="col-sm-10">
    <h5>@Model.TaskProcedureDescription</h5>
</div>

<label class="col-sm-2">Steps</label>
<div class="col-sm-10">
    <h5>@Model.TaskSteps</h5>
</div>

<div class="col-sm-2">
</div>
<div class="col-sm-10">
    <div class="panel panel-primary">
        <div class="panel-heading">The following video illustrates this step:</div>
        <div class="panel-body">
            <video width="320" height="240" controls>
                <source src="~/UploadedFiles/@Model.TaskVideoFile" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>
</div>

<br />

<div class="panel panel-default">
    <div class="panel-heading">Images</div>
    <div class="panel-body">
        <div class="col-sm-4">
            <div class="panel panel-info">
                <div class="panel-heading">Image 1</div>
                <div class="panel-body">
                    <img src="~/Content/Images/images59NSPFUB.jpg" alt="No image available" />
                </div>
            </div>
            @if (Model.FilePath1 != null)
            {
                @Html.ActionLink("Download:" + Model.FilePath1, "Download", "DownloadFile", new { fileName = Model.FilePath1 }, null)
            }
        </div>
        <div class="col-sm-4">
            <div class="panel panel-info">
                <div class="panel-heading">Image 2</div>
                <div class="panel-body">
                    <img src="~/Content/Images/imagesP08ZF16E.jpg" alt="No image available" />
                </div>
            </div>
            @if (Model.FilePath2 != null)
            {
                @Html.ActionLink("Download:" + Model.FilePath2, "Download", "DownloadFile", new { fileName = Model.FilePath2 }, null)
            }
        </div>
        <div class="col-sm-4">
            <div class="panel panel-info">
                <div class="panel-heading">Image 3</div>
                <div class="panel-body">
                    <img src="~/Content/Images/untitled.png" alt="No image available" />
                </div>
            </div>
            @if (Model.FilePath3 != null)
            {
                @Html.ActionLink("Download:" + Model.FilePath3, "Download", "DownloadFile", new { fileName = Model.FilePath3 }, null)
            }
        </div>
    </div>
</div>

<a href='@("/SubtaskLevel1/Edit/" + @Model.SubTaskId)' class="btn btn-default">Close</a>
