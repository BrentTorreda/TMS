@model TaskManager.Models.TaskTypes

@{
    ViewBag.Title = "Task Type Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Task Type Form</h2>

@using (Html.BeginForm("Save", "TaskTypes",
            FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        <label class="control-label col-sm-2" for="TaskName">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(t => t.TaskName, new { @class = "form-control" })
            @Html.ValidationMessageFor(t => t.TaskName)
        </div>
        @Html.HiddenFor(t => t.TaskTypeId)
    </div>

    @Html.AntiForgeryToken()
    <a href='@("/TaskTypes/Index")' class="btn btn-default">Close</a>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

