@model TaskManager.ViewModels.TasksFormViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.FilterBy</h2>
<hr />
<p>
    @Html.ActionLink("New Task", "New", "Tasks", null, new { @class = "btn btn-primary" })
</p>

<table id="tasks" class="table table-striped table-hover">
    <thead>
        <tr>
            <th> </th>
            <th>Task Name</th>
            <th>Description</th>
            <th>Date Created</th>
            <th>Hours</th>
            <th>Date Work Started</th>
            <th>Time Worked</th>
            <th>Bill</th>
            <th>Category</th>
            <th>Type</th>
            <th>Status</th>
            <th> </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
<script>
    $(document).ready(function () {
        var id = @Html.Raw(Json.Encode(Model.FilterId));
        var filterBy = @Html.Raw(Json.Encode(Model.FilterBy));

            /* Formatting function for row details - modify as you need */
            function format(table_id) {
                return '<table id="' + table_id + '" class="display" border="0" style="padding-left:50px; width:100%;">' +
                    '<thead>' +
                    '<th></th >' +
                    '<th>Name</th>' +
                    '<th>Description</th>' +
                    '<th>Hours</th>' +
                    '<th>Date Created</th>' +
                    '<th>Assigned To</th>' +
                    '<th>Time Worked</th>' +
                    '<th>Status</th>' +
                    '</thead>' +
                    '</table>';
        }

            function sub_DataTable(vtask_id, table_id) {
                var subtable = $('#'+ table_id).DataTable({
                    paging: false,
                    ordering: false,
                    info: false,
                    searching: false,

                    ajax: {
                        url: "/api/subtasklevel1/" + vtask_id,
                        dataSrc: ""
                    },

                    columns: [
                        {
                            data: "TaskId",
                            render: function (data, type, subtask) {
                                return "<a class='btn btn-primary btn-xs' href='/subtasklevel1/view/" + subtask.SubTaskId + "'> View </a>";
                            }
                        },
                        {
                            data: "SubTaskName"
                        },
                        {
                            data: "SubTaskDescription"
                        },
                        {
                            data: "Hours"
                        },
                        {
                            data: "DateCreated",
                            render: function (data) {
                                return moment(data).format("DD MMM YYYY");
                            }
                        },
                        {
                            data: "Members.LastName",
                            render: function (data, type, member) {
                                return member.Members.FirstName + " " + member.Members.LastName;
                            }
                        },
                        {
                            data: "TimeWorked"
                        },
                        {
                            data: "TaskStatuses.TaskStatusName"
                        }
                    ]             
                });
            }

            var table = $("#tasks").DataTable({
                ajax: {
                    url: "/api/tasks/" + id,
                    dataSrc: ""
                },
                
                columns: [
                    {
                        className: 'details-control',                        
                        orderable: false,
                        data: "TaskId",
                        defaultContent: '',
                        render: function (data) {
                            return "<input type='hidden' name='TaskId' value=" + data + ">";
                        }
                    },
                    {
                        data: "TaskName",
                        render: function (data, type, task) {
                            return "<a href='/tasks/edit/" + task.TaskId + "'>" + task.TaskName +"</a>";
                        }
                    },
                    {
                        data: "TaskDescription"
                    },
                    {
                        data: "DateCreated",
                        render: function (data) {
                            return moment(data).format("DD MMM YYYY");
                        }
                    },
                    {
                        data: "Hours"
                    },
                    {
                        data: "DateWorkStarted",
                        render: function (data) {
                            return moment(data).format("DD MMM YYYY");
                        }
                    },
                    {
                        data: "TimeWorked"
                    },
                    {
                        data: "Price.Amount"
                    },
                    {
                        data: "TaskCategory.CategoryName"
                    },
                    {
                        data: "TaskType.TaskName"
                    },
                    {
                        data: "TaskStatus.TaskStatusName"
                    },
                    {
                        data: "TaskId",
                        render: function (data) {
                            return "<button class='js-delete btn btn-primary btn-xs' data-task-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            // Add event listener for opening and closing details
            $('#tasks').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);

                if (row.child.isShown()) {
                    // This row is already open - close it
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    var cell = table.cell(this);
                    var virtual_task_id = cell.data();
                    var subtable_id = "subtable-" + virtual_task_id;
                    row.child(format(subtable_id)).show();
                    tr.addClass('shown');
                    sub_DataTable(virtual_task_id, subtable_id); 
                }
            });        

            $("#tasks").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this task?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/tasks/" + button.attr("data-task-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
</script>
}