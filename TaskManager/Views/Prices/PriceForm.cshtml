@model TaskManager.Models.Prices

@{
    ViewBag.Title = "Price Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Price Form</h2>

@using (Html.BeginForm("Save", "Prices",
            FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        <label class="control-label col-sm-2" for="Amount">Amount</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Amount, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Amount)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="PriceDescription">Description</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.PriceDescription, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.PriceDescription)
        </div>
    </div>    

    @Html.HiddenFor(p => p.PriceId)
    @Html.AntiForgeryToken()

    <div class="form-group" style="display:block;"> 
        <div class="col-sm-12">
            <div class="btn-group pull-right">
                <a href='@("/Prices/Index")' class="btn btn-default">Close</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


